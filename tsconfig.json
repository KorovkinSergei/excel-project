{
  "compilerOptions": {
    "lib": [
      "es6",
      "esnext",
      "DOM"
    ],
    "outDir": "./dist/",
    "noImplicitAny": false,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
